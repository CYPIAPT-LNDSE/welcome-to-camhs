<div class="home">
  <div class="home__text">
    <h2 class="home__title">How do you feel<br>about your home?</h2>
  </div>

  <div class="emoji-sprite"></div>
  <div class="home__slider">
    <label class="slider__label slider__label--bad">Bad</label>
    <input name="home" class="home__range range" type="range" min="1"
    max="5" value="3" step="1">
    <label class="slider__label slider__label--good">Good</label>
  </div>
  <div class="home__textarea">
    <div class="textarea__container">
      <label class="textarea__label">I like:</label>
      <textarea class="textarea__text home__like" type="text"></textarea>
    </div>
    <div class="textarea__container">
      <label class="textarea__label">I dislike:</label>
      <textarea class="textarea__text home__dislike" type="text"></textarea>
    </div>
  </div>

  {{> buttons }}
</div>
