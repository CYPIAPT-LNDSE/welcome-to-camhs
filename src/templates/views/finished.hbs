<div class="finish-background">
  <div class="finish">
    <div class="finish__text">
      <h1 class="finish__header">You are finished!</h1>
      <img class="finish__lion" src="assets/lion-no-tail.svg"></img>

      <div class="finish__prompt-container">
        <p class="finish__prompt">Where should we send <br> your answers?</p>
      </div>
      <form class="finish__email-form">
        <label class="input__label" for="finish-input">Email address</label>
        <input id="finish-input" class="finish__email-input" type="text"
        value="" placeholder="Enter your email address here...">
        <br>
        <input class="send-email-button" type="button" value="Send">
      </form>
      <a class="home-button hidden" href="{{ home }}">Start again</a>

    </div>
    <a href="/info">
      <img class="finish__info-icon" src="../assets/info-icon-black.svg" alt="More information icon">
    </a>
    {{> buttons }}
  </div>
</div>
