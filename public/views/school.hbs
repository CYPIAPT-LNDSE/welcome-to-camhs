<div class="school">
  <div class="school__text">
    <h2 class="school__title">How do you feel about school?</h2>
  </div>
  <div class="friends__emoji-sprite"></div>
  <div class="school__slider">
    <span class="school__label label--bad">Bad</span>
    <input class="school__range range" type="range" min="0"
    max="4" value="2" step="1">
    <span class="school__label label--good">Good</span>
  </div>
  <div class="school__text">
    <div class="school__textarea">
      <label class="label">I like:</label>
      <textarea class="textarea" type="text" autofocus=""></textarea>
    </div>
    <div class="school__textarea">
      <label class="label">I dislike:</label>
      <textarea class="textarea" type="text" autofocus=""></textarea>
    </div>
  </div>

  {{> buttons }}
</div>
